<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_tags"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_xxsmall">

        <TextView
            android:id="@+id/recycler_tags_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:layout_marginStart="@dimen/spacing_large"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_oval_3"
            android:drawablePadding="@dimen/spacing_xlarge"
            android:textSize="@dimen/font_medium"
            app:layout_constraintBottom_toBottomOf="@+id/image_post"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_post"
            app:layout_constraintTop_toTopOf="@+id/image_post"
            app:layout_constraintVertical_bias="0.32999998"
            tools:text="TextView"
            />
</android.support.v7.widget.CardView>